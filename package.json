{
  "name": "device.js",
  "amdName": "device",
  "version": "2.1.0",
  "description": "client and server side device / useragent detection for easier adaptive development / design",
  "module": "es/device.js",
  "jsnext:main": "es/device.js",
  "browser": "dist/device.js",
  "main": "./lib/device.js",
  "scripts": {
    "clear": "rimraf lib dist es",
    "build": "yarn clear && yarn build:cjs && yarn build:es && yarn build:browser && yarn build:umd",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env NODE_ENV=production FORMAT=es rollup -c",
    "build:umd": "cross-env NODE_ENV=production FORMAT=umd rollup -c",
    "build:cjs": "cross-env NODE_ENV=production FORMAT=cjs rollup -c",
    "build:browser": "cross-env NODE_ENV=production FORMAT=iife rollup -c",
    "dev": "rollup -c --watch",
    "reload": "livereload ['examples/','dist/']",
    "watch": "cross-env FORMAT=umd NODE_ENV=development npm-run-all --parallel reload dev",
    "test": "ava -v"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/soenkekluth/device.js.git"
  },
  "keywords": [
    "device",
    "browser",
    "server",
    "useragent",
    "ua",
    "detection"
  ],
  "author": "SÃ¶nke Kluth <soenke.kluth@gmail.com> (http://soenkekluth.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/soenkekluth/device.js/issues"
  },
  "files": [
    "dist",
    "lib",
    "src",
    "es"
  ],
  "homepage": "https://github.com/soenkekluth/device.js",
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-es2015": "6.24.1",
    "cross-env": "^5.0.1",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-eslint": "3.0.0",
    "rollup-plugin-memory": "2.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "1.1.1",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "lodash-es": "^4.17.4"
  }
}
